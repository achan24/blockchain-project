<%- include('partials/header') %>

<div class="container mt-5">
  <div class="row">
    <div class="col-md-8 mx-auto">
      <div class="card shadow-sm">
        <div class="card-body text-center">
          <h1 class="display-1 text-danger mb-4">
            <i class="bi bi-exclamation-triangle-fill"></i>
          </h1>
          <h2 class="card-title mb-4"><%= title %></h2>
          <p class="card-text lead mb-4"><%= message %></p>
          
          <% if (error && Object.keys(error).length > 0) { %>
            <div class="alert alert-danger text-start">
              <pre class="mb-0"><%= JSON.stringify(error, null, 2) %></pre>
            </div>
          <% } %>
          
          <a href="/" class="btn btn-primary mt-3">Return to Homepage</a>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include('partials/footer') %>
